 <section class=" pt-8 pt-md-11">
      <div class="container">
          <div class="row">
             <div class="col-12">

                <!-- Heading -->
                 <h2 class="mb-0">
                      Dernieres realisations
                 </h2>

                 <!-- Text -->
                <p class="mb-5 text-muted">
                      These span the grid's entire width with several options.
                </p>

              </div>
          </div> 
          <div clas="row">
               {% for peinture in peintures %}
             <div class="col-12">
                 <div class="card card-row shadow-light-lg mb-6 lift lift-lg" data-aos="fade-right">
                      <div class="row gx-0">

                        <a href="{{ path('realisationsdetails', {'slug': peinture.slug}) }}" class="col-12 col-md-6 bg-cover card-img-start" style="background-image: url();">
                            <img src="{{ vich_uploader_asset(peinture,'imageFile')|imagine_filter('miniature') }}" alt="..." class="img-fluid  ">
                            <div class="shape shape-end shape-fluid-y svg-shim text-white d-none d-md-block">
                                <svg viewBox="0 0 112 690" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M116 0H51v172C76 384 0 517 0 517v173h116V0z" fill="currentColor"/></svg>    
                           </div>
                        </a>
                        <div class="col-12 col-md-6">
                           <a href="{{ path('realisationsdetails', {'slug': peinture.slug}) }}" class="card-body">
                              
                              <h3>
                                  {{peinture.nom}}
                              </h3>
                              <p class="mb-0 text-muted">
                                
                                  {{ peinture.description|u.truncate(200, '...', false) }}
                              </p>
                              <a class="card-meta">
                                  <hr class="card-meta-divider">
                                  <p class="h6 text-uppercase text-muted mb- ms-auto">
                                      
                                      <time datetime="2021-10-25">Ajoutee le {{ peinture.createdAt|date('d/m/Y') }}</time>
                                  
                                  </p>
                              
                              </a>
                           
                        
                        </div>
                      
                      </div>
                 </div>
                 </div>
              {% endfor %}
             
          </div>
      </div> <!-- / .container -->
  </section>